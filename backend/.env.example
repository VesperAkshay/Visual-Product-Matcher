# Visual Product Matcher Environment Configuration

# Flask Application Settings
FLASK_ENV=development  # development, production, testing
FLASK_APP=app.py
SECRET_KEY=change-this-in-production-very-important
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
API_VERSION=v1

# Qdrant Database Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=product_images
USE_DOCKER_QDRANT=true
QDRANT_TIMEOUT=30
VECTOR_DIMENSION=512

# CLIP Model Configuration
CLIP_MODEL_NAME=openai/clip-vit-base-patch32
MODEL_CACHE_DIR=./models_cache

# File Upload Settings
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp
UPLOAD_FOLDER=./uploads
DATA_FOLDER=./data

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# API Rate Limiting
API_RATE_LIMIT=100 per hour  # Format: "number per time_unit"

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=  # Leave empty for console logging only, or specify path like ./logs/app.log

# Performance Settings
BATCH_SIZE=100
MAX_WORKERS=4

# Production Specific (uncomment and set in production)
# PORT=5001
# GUNICORN_WORKERS=4
# GUNICORN_TIMEOUT=120
